@model List<WebApplication2.Entities.User>

@{
    ViewData["Title"] = "Пользователи";
    Layout = "_LayoutAdmin";
}

<main class="main" style="color: #000000;">
    <h2>Список пользователей</h2>
    <table class="data-table">
        <thead>
        <tr>
            <th>Имя</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" title="Редактировать">
                        <i class="fas fa-edit"></i>
                    </a>
                   
                    <a href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" title="Удалить" onclick="return confirm('Удалить?');">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</main>