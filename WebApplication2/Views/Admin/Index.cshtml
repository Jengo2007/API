@{
    ViewData["Title"] = "Админ";
    Layout = "_LayoutAdmin";
}
@model WebApplication2.ViewModels.AdminViewModel

<main class="main" style="color: #000000;">
    <div class="welcome">
        <h1>Добро пожаловать, @User.Identity.Name!</h1>
        <p>Вы на главной странице админ-панели.</p>
    </div>

    <section class="cashiers-section">
        <h2>Список кассиров</h2>
        <table class="data-table">
            <thead>
                <tr>
                    <th class="name-column">Имя</th>
                    <th class="email-column">Email</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cashier in Model.Cashiers)
                {
                    <tr>
                        <td>@cashier.User?.Username</td>
                        <td>@cashier.User?.Email</td>
                        <td>
                            <a href="@Url.Action("EditCashier", "Admin", new { id = cashier.User?.Id })" class="btn btn-sm btn-primary" title="Редактировать">
                                <i class="fas fa-edit icon-edit"></i> <!-- ✅ Добавлен класс icon-edit -->
                            </a>
                            <a href="@Url.Action("DeleteCashier", "Admin", new { id = cashier.User?.Id })" class="btn btn-sm btn-danger" title="Удалить" onclick="return confirm('Вы уверены, что хотите удалить?');">
                                <i class="fas fa-trash-alt icon-delete"></i> <!-- ✅ Добавлен класс icon-delete -->
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <section class="users-section">
        <h2>Список пользователей</h2>
        <table class="data-table">
            <thead>
                <tr>
                    <th class="name-column">Имя</th>
                    <th class="email-column">Email</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>
                            <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="btn btn-sm btn-primary" title="Редактировать">
                                <i class="fas fa-edit icon-edit"></i> <!-- ✅ Добавлен класс icon-edit -->
                            </a>
                            <a href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" class="btn btn-sm btn-danger" title="Удалить" onclick="return confirm('Вы уверены, что хотите удалить?');">
                                <i class="fas fa-trash-alt icon-delete"></i> <!-- ✅ Добавлен класс icon-delete -->
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</main>
